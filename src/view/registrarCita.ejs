<!DOCTYPE html>
<html lang="es">
	<%- include ("templates/head.ejs", {titulo: 'Registrar cita', css: '/css/registroMascota.css'}) %>
	<body>
		<%- include ("templates/user.header.ejs") %>;
    <section class="ventana">
        <div class="contenedor">
            <div class="ingreso-container">
                <h2>Agendar una cita</h2>
                <form class="ingreso-form" action="#" method="post">
                    <div class="nombre">
                        <input type="text" id="motivo" name="motivo" placeholder="Motivo" required>
                    </div>
                    <div class="nombre">
                        <textarea id="descripcion" name="descripcion" placeholder="DescripciÃ³n" required></textarea>
                    </div>

                    <div class="fecha">
                        <label for="fecha">Fecha:</label>
                        <input type="date" id="fecha" name="fecha" required>
                    </div>
                    
                    <div class="fecha">
                        <label for="hora-inicio">Hora de inicio:</label>
                        <input type="time" id="hora-inicio" name="hora_inicio" required>
                    </div>
                    
                    <div class="fecha">
                        <label for="hora-fin">Hora de fin:</label>
                        <input type="time" id="hora-fin" name="hora_fin" required>
                    </div>

                    <button id="btnIngresar" type="submit" >Agendar cita</button>
                </form>
            </div>
        </div>
    </section>

